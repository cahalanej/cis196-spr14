<%= form_for(@comment) do |f| %>
	<div class="field">
		<p>Comment Body</p>
		<%= f.text_area :body%>
	</div>
	<div class="field">
		<%= f.hidden_field :user_id, :value => current_user.id%>
	</div>
	<div class="field">
		<p>post</p>
		<%= f.collection_select :post_id, Post.all, :id, :title%>
	</div>
	<div class="actions">
		<%= f.submit%>
	</div>
<% end %> 